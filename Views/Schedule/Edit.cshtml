@model Shift

<form asp-action="Edit">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">
				Желаете изменить смену?
			</h2>
			<hr />
		</div>

		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<input type="hidden" asp-for="ShiftId" />
		<div class="mb-3">
			<label asp-for="ShiftDate">Дата найма</label>
			<input asp-for="ShiftDate" class="form-control" type="date" value="@Model.ShiftDate.ToString("dd-MM-yyyy")" />
			<span asp-validation-for="ShiftDate" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="WorkShedule">Продолжительность смены</label>
			<input asp-for="WorkShedule" class="form-control" />
			<span asp-validation-for="WorkShedule" class="text-danger"></span>
		</div>
		<div class="form-group">
			<input type="submit" value="Изменить" class="btn btn-primary" style="width:150px" />
			<a asp-controller="Schedule" asp-action="Index" class="btn btn-secondary" style="width:200px">
				Вернуться к списку
			</a>
		</div>
	</div>
</form>


<!--Add client side validation-->
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial.cshtml" />
	}
}


