@model IEnumerable<OperationsHistory>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-3">
            <a asp-controller="Staff" asp-action="Index" class="text-decoration-none">
                <h2 class="text-primary">История продаж</h2>
            </a>
        </div>
        <div class="col-9 text-end">
@*            <form class="d-flex" method="get" asp-controller="Staff" asp-action="Search">
                <input class="form-control me-2" type="search" placeholder="Поиск" aria-label="Search" name="searchString">
                <button class="btn btn-primary" type="submit">Найти</button>
            </form>*@
            <a asp-controller="Sales" asp-action="ExportToExcel" class="btn btn-secondary">
                Экспортировать историю операций
            </a>
        </div>
    </div>
    <br /><br /> 

    <form class="d-flex" method="get">
        <table class="table table-boarded table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Дата и время покупки
                    </th>
                    <th>
                        Браслет
                    </th>
                    <th>
                        Услуга
                    </th>
                    <th>
                        Количество
                    </th>
                    <th>
                        Процент скидки
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="13%" class="table-cell">
                            @obj.DateTimePurchase
                        </td>
                        <td width="13%" class="table-cell">
                            @obj.BraceletId
                        </td>
                        <td width="23%">
                            @obj.ServiceNameNavigation.ServiceName
                        </td>
                        <td width="10%">
                            @obj.ServiceCount
                        </td>
                        <td width="10%">
                            @obj.DiscountPercentageNavigation.DiscountPercentage
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
</div>

<style>
    .table-cell {
        max-width: 400px;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>


