@model Event

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">
				Желаете добавить новое мероприятие?
			</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="EventName">Название мероприятия</label>
			<input asp-for="EventName" class="form-control" />
			<span asp-validation-for="EventName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="DateTime">Дата и время мероприятия</label>
			<input asp-for="DateTime" class="form-control" type="datetime-local" value="@DateTime.Now.ToString("dd.MM.yyyy hh:mm")" />
			<span asp-validation-for="DateTime" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Duration">Продолжительность</label>
			<input asp-for="Duration" class="form-control" type="time" />
			<span asp-validation-for="Duration" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Description">Описание</label>
			<input asp-for="Description" class="form-control" />
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="EmployeeId">Аниматор, ответственный за мероприятие</label>
			<select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.Animators"></select>
			<span asp-validation-for="EmployeeId" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Создать</button>
		<a asp-controller="Holiday" asp-action="Index" class="btn btn-secondary" style="width:200px">
			Вернуться к списку
		</a>
	</div>
</form>


@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial.cshtml" />
	}
}
