@model IEnumerable<Attraction>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-3">
            <a asp-controller="Attraction" asp-action="Index" class="text-decoration-none">
                <h2 class="text-primary">Список аттракционов</h2>
            </a>
        </div>
        <div class="col-4 text-end">
            <a asp-controller="Attraction" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Создать новый аттракцион
            </a>
        </div>
        <div class="col-5 text-end">
            <form class="d-flex" method="get" asp-controller="Attraction" asp-action="Search">
                <input class="form-control me-2" type="search" placeholder="Поиск" aria-label="Search" name="searchString">
                <button class="btn btn-primary" type="submit">Найти</button>
            </form>
        </div>
    </div>
    <br /><br />

    <form class="d-flex" method="get" />
    <table class="table table-boarded table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Название аттракциона
                </th>
                <th>
                    Описание
                </th>
                <th>
                    Ограничения по росту
                </th>
                <th>
                    Ограничения по весу
                </th>
                <th>
                    Высота горки
                </th>
                <th>
                    Время спуска
                </th>
                <th>
                    Зона
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="15%" class="table-cell">
                        @obj.AttractionName
                    </td>
                    <td width="30%" class="table-cell">
                        @obj.AttractionDescription
                    </td>
                    <td width="5%">
                        @obj.GrowthRestrictions
                    </td>
                    <td width="5%">
                        @obj.WeightRestrictions
                    </td>
                    <td width="5%">
                        @obj.SlideHeight
                    </td>
                    <td width="5%">
                        @obj.DescentTime
                    </td>
                    <td width="10%">
                        @if (obj.ZoneLocationNavigation != null)
                        {
                            @obj.ZoneLocationNavigation.ZoneName
                        }
                    </td>
                    <td width="20%">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Attraction" asp-action="Edit" asp-route-id="@obj.AttractionId"
                               class="btn btn-primary mx-2"> <i class="bi bi-pencil"></i>Изменить</a>
                            <a asp-controller="Attraction" asp-action="Delete" asp-route-id="@obj.AttractionId"
                               class="btn btn-danger mx-2"> <i class="bi bi-trash3"></i>Удалить</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .table-cell {
        max-width: 400px;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>            