@model Post
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">
				Желаете добавить новую должность?
			</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="Post1">Название должности</label>
			<input asp-for="Post1" class="form-control" />
			<span asp-validation-for="Post1" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="SalaryAmount">Заработная плата</label>
			<input asp-for="SalaryAmount" class="form-control" />
			<span asp-validation-for="SalaryAmount" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-primary" style="width:150px">Создать</button>
		<a asp-controller="Posts" asp-action="Index" asp-route-activeTab="tab2" class="btn btn-secondary" style="width:200px">
			Вернуться к списку
		</a>
	</div>
</form>

<!--Add client side validation-->
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial.cshtml" />
	}
}
