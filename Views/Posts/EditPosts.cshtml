@model Post

<form asp-action="EditPosts">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">
				Желаете изменить должность?
			</h2>
			<hr />
		</div>

		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<input type="hidden" asp-for="PostId" />

		<div class="mb-3">
			<label asp-for="Post1">Название должности</label>
			<input asp-for="Post1" class="form-control" />
			<span asp-validation-for="Post1" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="SalaryAmount">Заработная плата</label>
			<input asp-for="SalaryAmount" class="form-control" />
			<span asp-validation-for="SalaryAmount" class="text-danger"></span>
		</div>
		<div class="form-group">
			<input type="submit" value="Изменить" class="btn btn-primary" style="width:150px" />
			<a asp-controller="Posts" asp-action="Index" class="btn btn-secondary" style="width:200px">
				Вернуться к списку
			</a>
		</div>
	</div>
</form>



<!--Add client side validation-->
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial.cshtml" />
	}
}

