@{
    ViewData["Title"] = "Users";
}
@model ICollection<HSEPractice2.Areas.Identity.Data.ApplicationUser>

<div class="text-center">
    <h1 class="Пользователи"></h1>
    <div class="col-12 text-end">
        <button class="btn btn-primary btn-lg">
            <a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register">Добавить нового пользователя</a>
        </button>
    </div>
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Идентификатор</th>
                    <th scope="col">Фамилия</th>
                    <th scope="col">Имя</th>
                    <th scope="col">Отчество</th>
                    <th scope="col">Корпоративная почта</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var user in Model)
                {
                    <tr>
                        <th scope="row">@user.Id</th>
                        <td>@user.LastName</td>
                        <td>@user.FirstName</td>
                        <td>@user.Patronymic</td>
                        <td>@user.Email</td>
                        <td>
                            <a asp-asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
                        </td>
                        <td>
                            <a asp-asp-controller="User" asp-action="Delete" asp-route-id="@user.Id">Удалить</a>
@*                            <a id="delete" href="/Identity/Account/Manage/DeletePersonalData" class="btn btn-danger">Удалить</a>*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>