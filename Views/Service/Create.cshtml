@model Service

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">
				Желаете добавить новую услугу?
			</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="ServiceName">Наименование услуги</label>
			<input asp-for="ServiceName" class="form-control" />
			<span asp-validation-for="ServiceName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Description">Описание услуги</label>
			<input asp-for="Description" class="form-control" />
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Price">Цена, руб.</label>
			<input asp-for="Price" class="form-control" />
			<span asp-validation-for="Price" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Создать</button>
		<a asp-controller="Service" asp-action="Index" class="btn btn-secondary" style="width:200px">
			Вернуться к списку
		</a>
	</div>
</form>

<!--Add client side validation-->
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial.cshtml" />
	}
}
