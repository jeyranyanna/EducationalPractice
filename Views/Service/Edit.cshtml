@model Service

<form asp-action="Edit">
	<!--Не обязательно указывать название метода, так как он одноименный и найдется сам-->
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">
				Желаете изменить услугу?
			</h2>
			<hr />
		</div>

		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<input type="hidden" asp-for="ServiceId" />

		<div class="mb-3">
			<label asp-for="ServiceName">Наименование услуги</label>
			<input asp-for="ServiceName" class="form-control" />
			<span asp-validation-for="ServiceName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Description">Описание услуги</label>
			<input asp-for="Description" class="form-control" />
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Price">Цена, руб.</label>
			<input asp-for="Price" class="form-control" />
			<span asp-validation-for="Price" class="text-danger"></span>
		</div>
		<div class="form-group">
			<input type="submit" value="Изменить" class="btn btn-primary" style="width:150px" />
			<a asp-controller="Service" asp-action="Index" class="btn btn-secondary" style="width:200px">
				Вернуться к списку
			</a>
		</div>
	</div>
</form>


<!--Add client side validation-->
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial.cshtml" />
	}
}



