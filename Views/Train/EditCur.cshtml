@using Microsoft.AspNetCore.Identity;
@using HSEPractice2.Areas.Identity.Data
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@model CurrentWorkout

<form asp-action="EditCur">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">
				Желаете изменить текущую тренировку?
			</h2>
			<hr />
		</div>

		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<input type="hidden" asp-for="CurrentWorkoutId" />

		<div class="mb-3">
			<label asp-for="WorkoutDate">Код тренировки</label>
			<select asp-for="WorkoutDate" asp-items="ViewBag.Trains" class="form-control"></select>
			<span asp-validation-for="WorkoutDate" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Trainer">Идентификационный номер инструктора</label>
			<input asp-for="Trainer" readonly class="form-control" />
			<span asp-validation-for="Trainer" class="text-danger"></span>
		</div>

		<div class="form-group">
			<input type="submit" value="Изменить" class="btn btn-primary" style="width:150px" />
			<a asp-controller="Train" asp-action="Index" class="btn btn-secondary" style="width:200px">
				Вернуться к списку
			</a>
		</div>
	</div>
</form>



@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial.cshtml" />
	}
}


